<div class="user_form_content">
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <h3>個人情報設定</h3>
  <%= form_with(model: @user, local: true, class:"form-signin") do |f| %>
    <%= f.label :name, class:"sr-only" %>
    <%= f.text_field :name, class:"form-control", placeholder:"Name" %>

    <%= f.label :email, class:"sr-only" %>
    <%= f.text_field :email, class:"form-control", placeholder:"Email" %>

    <%= f.label :password, class:"sr-only" %>
    <%= f.password_field :password, class:"form-control", placeholder:"Password　※8文字以上" %>

    <%= f.label :password_confirmation, class:"sr-only" %>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"もう一度入力してください" %>

    <%= f.submit "登録", class:"btn btn-primary submit" %>
  <% end %>
</div>

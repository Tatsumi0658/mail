<% @posts.each do |post| %>
  <%= post.profile.username %>
  <%= simple_format(post.content) %>
  <%= image_tag(post.image.url) %>
  <%= link_to "詳しくみる", post_path(post.id) %>
  <% if current_user.present? %>
    <% if current_profile.present? %>
      <% if post.profile_id == current_profile.id %>
        <%= link_to "編集する", edit_post_path(post.id) %>
        <%= link_to "削除する", post_path(post.id), method: :delete, data:{ confirm:"削除して良い？" } %>
      <% end %>
    <% end %>
  <% end %>
  <%= link_to "アカウント", profile_path(post.profile.id) %>
<% end %>
<% if current_user.present? %>
  <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
<% end %>

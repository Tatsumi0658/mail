<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit "投稿" %>
<% end %>
